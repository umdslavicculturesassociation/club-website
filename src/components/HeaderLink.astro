---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<a {...(!isActive ? { href } : {})} class:list={['header-link', className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
		transition: all 0.2s ease-in-out;
	}
	/*This class exists solely to give a higher CSS specificity to this rule. If you find out how to order the sheet load order please do that and remove this class*/
	a.header-link:not(.active):hover {
		color: var(--accent);
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
